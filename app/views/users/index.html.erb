<h1>Users</h1>
<%= link_to 'New User', new_user_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone Numbers</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td>
          <ul>
            <% user.phone_numbers.each do |phone_number| %>
              <%= phone_number.number %>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td> <%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>